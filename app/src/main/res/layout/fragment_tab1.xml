<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.wiki.Tab1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hero Image Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/heroImageCard"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="9dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/overviewCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/onnxIllustration"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:contentDescription="ONNX Illustration"
                    android:src="@drawable/logo_onnx"
                    app:layout_constraintBottom_toTopOf="@+id/onnxTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/onnxTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="ONNX"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onnxIllustration" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Overview Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/overviewCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/heroImageCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/overviewIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Overview Icon"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#6200EE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Apa itu ONNX?"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/overviewIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="ONNX adalah format model Machine Learning yang bersifat open source dan dirancang agar model dari berbagai framework—seperti PyTorch, TensorFlow, dan Scikit-learn—bisa diekspor ke satu format yang sama"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/overviewTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tujuan Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tujuanCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/overviewCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/tujuanIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_compass"
                    app:tint="#6200EE"
                    android:contentDescription="Tujuan Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tujuanTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tujuan ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tujuanIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/tujuan1Layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tujuanTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/presence_online"
                            app:tint="#4CAF50"
                            android:contentDescription="Kompatibilitas" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Bisa digunakan di berbagai Framework AI"
                            android:textColor="#424242"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="#2196F3"
                            android:contentDescription="Fleksibilitas" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Mudah dijalankan di banyak perangkat"
                            android:textColor="#424242"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_preferences"
                            app:tint="#FF9800"
                            android:contentDescription="Performa" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Proses prediksi lebih cepat dan efisien"
                            android:textColor="#424242"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Format Model Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/formatCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tujuanCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/formatIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_save"
                    app:tint="#6200EE"
                    android:contentDescription="Format Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/formatTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Format Model ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/formatIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/formatText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model ONNX disimpan dalam format biner (.onnx) yang berisi:\n• Grafik komputasi model\n• Bobot (weights) dan bias\n• Metadata dan versi\n• Informasi input/output"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/formatTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contoh Penggunaan Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contohCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/formatCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/contohIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#6200EE"
                    android:contentDescription="Contoh Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/contohTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contoh Penggunaan ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/contohIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/contohText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Model PyTorch → ONNX → Aplikasi Mobile\n2. Model TensorFlow → ONNX → Web Browser\n3. Model Scikit-learn → ONNX → Perangkat IoT"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/contohTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Use Case Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/usecaseCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/contohCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/usecaseIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_build"
                    app:tint="#6200EE"
                    android:contentDescription="Use Case Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/usecaseTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contoh Nyata"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/usecaseIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/usecaseText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perusahaan e-commerce menggunakan ONNX untuk deploy model rekomendasi produk:\n\n• Model dilatih dengan PyTorch di server\n• Dikonversi ke ONNX untuk optimisasi\n• Di-deploy di aplikasi mobile dengan ONNX Runtime\n• Hasil: Inference 3x lebih cepat"
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/usecaseTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>