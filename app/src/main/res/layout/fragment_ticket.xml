<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.ticket.TicketFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/poppins_regular">

        <!-- Header Logo dan Judul -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="69dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="5dp"
            android:src="@drawable/logo_color3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extrabold"
            android:text="AquaTrip"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/appSubtitle"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toTopOf="@id/logo"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waterpark"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/appName"
            app:layout_constraintTop_toBottomOf="@id/appName" />

        <!-- Filter Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingHorizontal="20dp">

                <Button
                    android:id="@+id/btnAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient2"
                    android:text="All"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_manyperson"
                    android:drawableTint="@color/white"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnAdult"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread" />

                <Button
                    android:id="@+id/btnAdult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient2"
                    android:text="Adult"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawableTint="@color/white"
                    android:paddingHorizontal="12dp"
                    android:layout_marginHorizontal="8dp"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toEndOf="@id/btnAll"
                    app:layout_constraintEnd_toStartOf="@id/btnChild"
                    app:layout_constraintTop_toTopOf="@id/btnAll"
                    app:layout_constraintBottom_toBottomOf="@id/btnAll" />

                <Button
                    android:id="@+id/btnChild"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient2"
                    android:text="Child"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/ic_child"
                    android:drawableTint="@color/white"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toEndOf="@id/btnAdult"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/btnAll"
                    app:layout_constraintBottom_toBottomOf="@id/btnAll" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daftar Tiket -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <include
                    android:id="@+id/tiketCard"
                    layout="@layout/ticket_item_card" />
                <include layout="@layout/ticket_item_card" />
                <include layout="@layout/ticket_item_card" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
