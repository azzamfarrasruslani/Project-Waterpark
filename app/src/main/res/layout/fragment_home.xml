<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_color"
    tools:context=".ui.home.HomeFragment">

 <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/poppins_regular"
    >

     <ImageView
         android:id="@+id/logo"
         android:layout_width="69dp"
         android:layout_height="59dp"
         android:layout_marginStart="24dp"
         android:layout_marginTop="44dp"
         android:contentDescription="TODO"
         android:paddingHorizontal="5dp"
         android:src="@drawable/logo_color3"

         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:shapeAppearanceOverlay="@style/roundedImageView" />

     <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="AquaTrip"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo" />

     <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waterpark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

     <androidx.cardview.widget.CardView
        android:id="@+id/promoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:background="@drawable/bg_gradient2"
            android:padding="20dp">

             <!-- Judul Promosi -->
             <TextView
                android:id="@+id/promoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Let's Go to the Waterpark!"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

             <!-- Subjudul Promosi -->
             <TextView
                android:id="@+id/promoSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Book your tickets now and dive into fun"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promoTitle" />

             <!-- Tombol Mulai Booking -->
             <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startBookingButton"
                android:layout_width="129dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_gradient"
                android:fontFamily="@font/poppins_bold"
                android:text="Start Booking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promoSub"
                app:layout_constraintVertical_bias="0.538" />
         </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.cardview.widget.CardView>

     <!-- ========================================== -->
     <!-- MENU CEPAT (Tiket, dll) -->
     <!-- ========================================== -->

     <androidx.cardview.widget.CardView
        android:id="@+id/quickMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/promoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:background="@color/white"
            android:padding="16dp">

             <!-- ========== MENU 1: Tiket ========== -->

             <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuTicket"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                 <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ticket" />
             </androidx.cardview.widget.CardView>

             <TextView
                android:id="@+id/labelMenuTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tiket"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuTicket"
                app:layout_constraintStart_toStartOf="@id/cardMenuTicket"
                app:layout_constraintTop_toBottomOf="@id/cardMenuTicket" />

             <!-- ========== MENU 2: History ========== -->

             <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuHistory"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuTicket"
                app:layout_constraintTop_toTopOf="parent">

                 <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history" />
             </androidx.cardview.widget.CardView>

             <TextView
                android:id="@+id/labelMenuHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Riwayat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuHistory"
                app:layout_constraintStart_toStartOf="@id/cardMenuHistory"
                app:layout_constraintTop_toBottomOf="@id/cardMenuHistory" />

             <!-- ========== MENU 3: Location ========== -->

             <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuLocation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuHistory"
                app:layout_constraintTop_toTopOf="parent">

                 <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location" />
             </androidx.cardview.widget.CardView>

             <TextView
                android:id="@+id/labelMenuLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Lokasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuLocation"
                app:layout_constraintStart_toStartOf="@id/cardMenuLocation"
                app:layout_constraintTop_toBottomOf="@id/cardMenuLocation" />

             <!-- ========== MENU 4: Attractions ========== -->

             <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuAttractions"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuLocation"
                app:layout_constraintTop_toTopOf="parent">

                 <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attractions" />
             </androidx.cardview.widget.CardView>

             <TextView
                android:id="@+id/labelMenuAttractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Atraksi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuAttractions"
                app:layout_constraintStart_toStartOf="@id/cardMenuAttractions"
                app:layout_constraintTop_toBottomOf="@id/cardMenuAttractions" />

         </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.cardview.widget.CardView>

      <!-- ========================================== -->
     <!-- LABEL RECOMMENDED -->
     <!-- ========================================== -->

     <!-- ========================================== -->
     <!-- KARTU TIKET FAMILY PASS -->
     <!-- ========================================== -->

     <TextView
        android:id="@+id/recommendedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Recommended Tickets"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quickMenuContainer" />

     <androidx.cardview.widget.CardView
        android:id="@+id/cardFamilyPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/recommendedLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

         <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/ticketImage"
                 android:layout_width="0dp"
                 android:layout_height="150dp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/p_family"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.0"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent"
                 app:shapeAppearanceOverlay="@style/roundedImageView" />

             <TextView
                android:id="@+id/ticketTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Family Pass"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ticketImage" />

             <!-- Subjudul -->
             <TextView
                android:id="@+id/ticketSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up to 4 people"
                android:textColor="#777777"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/ticketTitle"
                app:layout_constraintTop_toBottomOf="@id/ticketTitle" />

             <!-- Harga -->
             <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$89"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ticketTitle"
                app:layout_constraintTop_toBottomOf="@id/ticketSubtitle" />

             <!-- Tombol Booking -->
             <Button
                android:id="@+id/btnBookNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@null"
                 android:background="@drawable/bg_gradient2"
                android:text="Book Now"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ticketPrice" />

         </androidx.constraintlayout.widget.ConstraintLayout>
     </androidx.cardview.widget.CardView>

     <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardFamilyPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

         <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Quick Actions"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

         <androidx.cardview.widget.CardView
            android:id="@+id/giftCard"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@+id/a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/booking">

             <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"/>

         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
            android:id="@+id/booking"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flow"
            app:layout_constraintTop_toBottomOf="@+id/a">

             <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

             </androidx.constraintlayout.widget.ConstraintLayout>

         </androidx.cardview.widget.CardView>

         <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="giftCard, booking"
            app:flow_horizontalGap="8dp"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/a" />

     </androidx.constraintlayout.widget.ConstraintLayout>

     <!--    <com.google.android.material.bottomnavigation.BottomNavigationView-->
     <!--        android:id="@+id/bottomNavigationView"-->
     <!--        android:layout_height="wrap_content"-->
     <!--        android:layout_width="match_parent"-->
     <!--        android:layout_margin="20dp"-->
     <!--        android:elevation="2dp"-->
     <!--        android:background="@drawable/rounded"-->
     <!--        app:layout_constraintBottom_toBottomOf="parent"-->
     <!--        app:layout_constraintEnd_toEndOf="parent"-->
     <!--        app:layout_constraintStart_toStartOf="parent"-->
     <!--        app:menu="@menu/bottom_nav" />-->

 </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
