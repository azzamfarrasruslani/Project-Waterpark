<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/poppins_regular"
    android:background="@color/bg_color"
    tools:context=".ui.home.HomeActivity">

    <!-- ========================================== -->
    <!-- LOGO DAN NAMA APLIKASI DI HEADER -->
    <!-- ========================================== -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:contentDescription="TODO"
        android:src="@drawable/logo_mobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="AquaSplash"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="@id/logo" />

    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waterpark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

    <androidx.cardview.widget.CardView
        android:id="@+id/promoCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="219dp"
            android:background="@drawable/btn_gradient"
            android:padding="20dp">

            <!-- Judul Promosi -->
            <TextView
                android:id="@+id/promoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Let's Go to the Waterpark!"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subjudul Promosi -->
            <TextView
                android:id="@+id/promoSub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Book your tickets now and dive into fun"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promoTitle" />

            <!-- Tombol Mulai Booking -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startBookingButton"
                android:layout_width="129dp"
                android:layout_height="44dp"
                android:background="@drawable/rounded"
                android:fontFamily="@font/poppins_bold"
                android:text="Start Booking"
                android:textAllCaps="false"
                android:textColor="@color/primary_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promoSub"
                app:layout_constraintVertical_bias="0.538" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- ========================================== -->
    <!-- MENU CEPAT (Tiket, dll) -->
    <!-- ========================================== -->

    <androidx.cardview.widget.CardView
        android:id="@+id/quickMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="25dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/promoCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- ========== MENU 1: Tiket ========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuTicket"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_ticket" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/labelMenuTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Tiket"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuTicket"
                app:layout_constraintStart_toStartOf="@id/cardMenuTicket"
                app:layout_constraintTop_toBottomOf="@id/cardMenuTicket" />

            <!-- ========== MENU 2: History ========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuHistory"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuTicket"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/labelMenuHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Riwayat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuHistory"
                app:layout_constraintStart_toStartOf="@id/cardMenuHistory"
                app:layout_constraintTop_toBottomOf="@id/cardMenuHistory" />

            <!-- ========== MENU 3: Location ========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuLocation"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuHistory"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/labelMenuLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Lokasi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuLocation"
                app:layout_constraintStart_toStartOf="@id/cardMenuLocation"
                app:layout_constraintTop_toBottomOf="@id/cardMenuLocation" />

            <!-- ========== MENU 4: Attractions ========== -->

            <androidx.cardview.widget.CardView
                android:id="@+id/cardMenuAttractions"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toEndOf="@id/cardMenuLocation"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_attractions" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/labelMenuAttractions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Atraksi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/cardMenuAttractions"
                app:layout_constraintStart_toStartOf="@id/cardMenuAttractions"
                app:layout_constraintTop_toBottomOf="@id/cardMenuAttractions" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!-- ========================================== -->
    <!-- LABEL RECOMMENDED -->
    <!-- ========================================== -->

    <!-- ========================================== -->
    <!-- KARTU TIKET FAMILY PASS -->
    <!-- ========================================== -->

    <TextView
        android:id="@+id/recommendedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Recommended Tickets"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quickMenuContainer" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFamilyPass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/recommendedLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Gambar Tiket -->
            <ImageView
                android:id="@+id/ticketImage"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_family"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Judul Tiket -->
            <TextView
                android:id="@+id/ticketTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family Pass"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ticketImage"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Subjudul -->
            <TextView
                android:id="@+id/ticketSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up to 4 people"
                android:textSize="14sp"
                android:textColor="#777777"
                app:layout_constraintTop_toBottomOf="@id/ticketTitle"
                app:layout_constraintStart_toStartOf="@id/ticketTitle" />

            <!-- Harga -->
            <TextView
                android:id="@+id/ticketPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$89"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/ticketSubtitle"
                app:layout_constraintStart_toStartOf="@id/ticketTitle" />

            <!-- Tombol Booking -->
            <Button
                android:id="@+id/btnBookNow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/ticketPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:elevation="2dp"
        android:background="@drawable/rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
