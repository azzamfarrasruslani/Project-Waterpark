<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.wiki.Tab3Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hero Image Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/heroConvertCard"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/overviewConvertCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/convertIllustration"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Konversi ONNX Illustration"
                    android:src="@android:drawable/ic_menu_upload"
                    app:layout_constraintBottom_toTopOf="@+id/convertHeroTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:tint="#6200EE" />

                <TextView
                    android:id="@+id/convertHeroTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Konversi ke ONNX"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/convertHeroSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/convertIllustration" />

                <TextView
                    android:id="@+id/convertHeroSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dari Berbagai Framework ML"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/convertHeroTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Overview Conversion Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/overviewConvertCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/heroConvertCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/overviewConvertIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Conversion Overview Icon"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#6200EE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewConvertTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Konversi Universal ke ONNX"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/overviewConvertIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewConvertText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="ONNX memungkinkan model dari berbagai framework machine learning dikonversi ke format universal. Proses konversi ini memudahkan deployment lintas platform tanpa mengubah struktur model secara signifikan."
                    android:textColor="#424242"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/overviewConvertTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- PyTorch Conversion Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pytorchCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/overviewConvertCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/pytorchIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#EE4C2C"
                    android:contentDescription="PyTorch Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/pytorchTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="PyTorch ke ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/pytorchIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/pytorchDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gunakan fungsi bawaan torch.onnx.export untuk mengekspor model beserta parameter dan arsitekturnya. Dummy input diperlukan untuk menentukan bentuk input yang sesuai."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/pytorchTitle" />

                <TextView
                    android:id="@+id/pytorchCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="import torch\nimport torch.onnx\n\n# Model yang sudah dilatih\nmodel = MyTrainedModel()\n\n# Input contoh untuk tracing\ndummy_input = torch.randn(1, 3, 224, 224)\n\n# Ekspor ke ONNX\ntorch.onnx.export(\n    model, \n    dummy_input, \n    'model.onnx',\n    input_names=['input'],\n    output_names=['output']\n)"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/pytorchDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- TensorFlow Conversion Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tensorflowCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/pytorchCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/tensorflowIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_ff"
                    app:tint="#FF6F00"
                    android:contentDescription="TensorFlow Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tensorflowTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="TensorFlow ke ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tensorflowIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tensorflowDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gunakan tf2onnx converter untuk mengubah model TensorFlow (.pb atau SavedModel) menjadi ONNX. Proses ini mempertahankan bobot model asli."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tensorflowTitle" />

                <TextView
                    android:id="@+id/tensorflowCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="# Install tf2onnx\npip install tf2onnx\n\n# Konversi dari command line\npython -m tf2onnx.convert \\\n    --saved-model tensorflow_model_dir \\\n    --output model.onnx \\\n    --opset 13\n\n# Atau dari Python code\nimport tf2onnx\nimport tensorflow as tf"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tensorflowDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scikit-learn Conversion Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/sklearnCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tensorflowCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/sklearnIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#007BB8"
                    android:contentDescription="Scikit-learn Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/sklearnTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Scikit-learn ke ONNX"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sklearnIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/sklearnDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gunakan library skl2onnx untuk mengonversi model tradisional Scikit-learn. Mendukung berbagai algoritma seperti RandomForest, SVM, dan Linear Models."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/sklearnTitle" />

                <TextView
                    android:id="@+id/sklearnCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="# Install skl2onnx\npip install skl2onnx\n\nfrom skl2onnx import convert_sklearn\nfrom skl2onnx.common.data_types import FloatTensorType\n\n# Model Scikit-learn yang sudah dilatih\nmodel = RandomForestClassifier()\nmodel.fit(X_train, y_train)\n\n# Tentukan tipe input\ninitial_type = [('input', FloatTensorType([None, n_features]))]\n\n# Konversi ke ONNX\nonnx_model = convert_sklearn(model, initial_types=initial_type)\n\n# Simpan model\nwith open('model.onnx', 'wb') as f:\n    f.write(onnx_model.SerializeToString())"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/sklearnDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/tipsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/sklearnCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/tipsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="#6200EE"
                    android:contentDescription="Tips Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tipsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tips Konversi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tipsIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/tip1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tipsTitle">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_input_get"
                        app:tint="#4CAF50"
                        android:contentDescription="Tip 1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Pastikan input shape sesuai dengan model asli"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tip1Layout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#2196F3"
                        android:contentDescription="Tip 2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Gunakan opset terbaru untuk dukungan operator"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tip3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tip2Layout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="#FF9800"
                        android:contentDescription="Tip 3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Validasi model setelah konversi dengan ONNX Runtime"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>