<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.wiki.Tab4Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hero Image Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/heroDatasetCard"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toTopOf="@+id/overviewDatasetCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/datasetIllustration"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Dataset Illustration"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:layout_constraintBottom_toTopOf="@+id/datasetHeroTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:tint="#6200EE" />

                <TextView
                    android:id="@+id/datasetHeroTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Dataset Project Tiket"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/datasetHeroSubtitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/datasetIllustration" />

                <TextView
                    android:id="@+id/datasetHeroSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Outdoor Swimming Pool Attendance"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/datasetHeroTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dataset Overview Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/overviewDatasetCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/heroDatasetCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/overviewDatasetIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Dataset Overview Icon"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#6200EE"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewDatasetTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Dataset Overview"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/overviewDatasetIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/overviewDatasetText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="6dp"
                    android:text="Dataset ini berisi data kehadiran harian di berbagai kolam renang outdoor di New York City selama musim panas 2022. Data mencakup informasi tanggal, wilayah (borough), nama kolam renang, dan jumlah pengunjung."
                    android:textColor="#424242"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/overviewDatasetTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Why This Dataset Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/whyDatasetCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/overviewDatasetCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/whyDatasetIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    app:tint="#EE4C2C"
                    android:contentDescription="Why Dataset Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/whyDatasetTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mengapa Dataset Ini Dipilih?"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/whyDatasetIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/whyDatasetDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dataset Outdoor Swimming Pool Attendance dipilih karena karakteristiknya yang cocok untuk sistem prediksi tiket dan manajemen kapasitas fasilitas rekreasi."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/whyDatasetTitle" />

                <TextView
                    android:id="@+id/whyDatasetList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="• Data waktu nyata dari fasilitas publik\n• Pola musiman yang jelas\n• Variasi data antar wilayah\n• Cocok untuk prediksi kapasitas\n• Data historis yang cukup untuk ML"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/whyDatasetDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Features Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/featuresCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/whyDatasetCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/featuresIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_ff"
                    app:tint="#FF6F00"
                    android:contentDescription="Features Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/featuresTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Features dan Output"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/featuresIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/featuresDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dataset ini memiliki fitur-fitur utama yang dapat digunakan untuk analisis dan prediksi jumlah pengunjung kolam renang."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/featuresTitle" />

                <TextView
                    android:id="@+id/featuresList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="Fitur Utama:\n• Date - Tanggal kunjungan\n• Borough - Wilayah (5 borough NYC)\n• Pool - Nama fasilitas\n• Attendance - Jumlah pengunjung\n\nOutput Model:\n• Prediksi jumlah pengunjung harian\n• Optimasi alokasi staf\n• Manajemen sistem booking tiket"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/featuresDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- ONNX Integration Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/onnxDatasetCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/featuresCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/onnxDatasetIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_next"
                    app:tint="#007BB8"
                    android:contentDescription="ONNX Integration Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/onnxDatasetTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ONNX Integration"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/onnxDatasetIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/onnxDatasetDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model time series forecasting yang dilatih akan dikonversi ke format ONNX untuk prediksi jumlah pengunjung secara real-time."
                    android:textSize="16sp"
                    android:textColor="#424242"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/onnxDatasetTitle" />

                <TextView
                    android:id="@+id/onnxDatasetCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#F5F5F5"
                    android:fontFamily="monospace"
                    android:lineSpacingExtra="4dp"
                    android:padding="12dp"
                    android:text="# Model forecasting untuk prediksi pengunjung\nmodel = TimeSeriesForecaster()\nmodel.fit(training_data)\n\n# Konversi ke ONNX untuk deployment\nimport onnxruntime as ort\n\n# Inferensi real-time\nsession = ort.InferenceSession('pool_attendance.onnx')\ninputs = {'date_features': date_data}\noutputs = session.run(None, inputs)\npredicted_attendance = outputs[0]"
                    android:textColor="#424242"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/onnxDatasetDesc" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Benefits Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/benefitsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/onnxDatasetCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/benefitsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_help"
                    app:tint="#6200EE"
                    android:contentDescription="Benefits Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/benefitsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Manfaat Implementasi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/benefitsIcon"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/benefit1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/benefitsTitle">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_input_get"
                        app:tint="#4CAF50"
                        android:contentDescription="Benefit 1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Prediksi kepadatan pengunjung real-time"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/benefit2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/benefit1Layout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_lock_lock"
                        app:tint="#2196F3"
                        android:contentDescription="Benefit 2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Optimasi alokasi staf dan sumber daya"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/benefit3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/benefit2Layout">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="#FF9800"
                        android:contentDescription="Benefit 3" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Sistem booking tiket yang lebih efisien"
                        android:textColor="#424242"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>