<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Rounded ImageView untuk tampilan kartu tiket -->
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Jika hanya ingin sudut atas melengkung -->
    <style name="roundedTopImageView">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <!-- Rounded ImageView untuk tampilan kartu tiket -->
    <style name="roundedButtonView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Jika hanya ingin sudut atas melengkung -->
    <style name="roundedTopButtonView">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="ToolbarSubtitleWrap" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:singleLine">false</item>
        <item name="android:ellipsize">none</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#DDDDDD</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>

</resources>
