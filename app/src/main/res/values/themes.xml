<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema dasar aplikasi -->
    <style name="Base.Theme.WaterparkAPP" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna status bar disamakan dengan warna background -->
        <item name="android:statusBarColor">@color/bg_color</item>

        <!-- Buat ikon status bar jadi gelap (agar terlihat jelas di background terang) -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Jika kamu ingin toolbar berwarna gradient -->
        <item name="colorPrimary">@color/primary_color</item>

        <!-- Jika kamu tidak ingin ada bayangan pada action bar -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Tema utama aplikasi -->
    <style name="Theme.WaterparkAPP" parent="Base.Theme.WaterparkAPP" />

</resources>
